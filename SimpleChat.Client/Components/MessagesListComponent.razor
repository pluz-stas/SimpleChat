<div id="messagesList">
    @for (var i = messages.Count - 1; i >= 0; i--)
    {
        var message = messages[i];

        @if (IsDateSplit(i))
        {
            <div class="dateSplit">
                @message.CreatedDate.ToShortDateString()
            </div>
        }

        <MessageComponent Message=@message DisplayUserName=@ShouldDisplayName(i) DisplayAvatar=@ShouldDisplayAvatar(i)></MessageComponent>
    }
    <button @onclick="ScrollToBottom" id="scrollButton" class="oi oi-chevron-bottom"></button>
</div>
